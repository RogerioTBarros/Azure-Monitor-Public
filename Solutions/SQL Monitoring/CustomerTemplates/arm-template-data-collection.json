{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "description": "SQL Server Monitoring Solution - Data Collection Components. Deploys Data Collection Endpoint (DCE) and Data Collection Rule (DCR) for the Logs Ingestion API pipeline.",
    "author": "Azure Monitor Assets"
  },
  "parameters": {
    "dataCollectionEndpointName": {
      "type": "string",
      "defaultValue": "sql-monitoring-dce",
      "metadata": {
        "description": "Name of the Data Collection Endpoint (DCE)."
      }
    },
    "dataCollectionRuleName": {
      "type": "string",
      "defaultValue": "dcr-sql-monitoring",
      "metadata": {
        "description": "Name of the Data Collection Rule (DCR)."
      }
    },
    "logAnalyticsWorkspaceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing Log Analytics Workspace (created in the infrastructure template)."
      }
    },
    "logAnalyticsWorkspaceResourceGroup": {
      "type": "string",
      "defaultValue": "[resourceGroup().name]",
      "metadata": {
        "description": "Resource group of the Log Analytics Workspace (if different from this deployment's resource group)."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Azure region. Must match the Log Analytics Workspace region."
      }
    }
  },
  "variables": {
    "workspaceResourceId": "[resourceId(parameters('logAnalyticsWorkspaceResourceGroup'), 'Microsoft.OperationalInsights/workspaces', parameters('logAnalyticsWorkspaceName'))]",
    "dceId": "[resourceId('Microsoft.Insights/dataCollectionEndpoints', parameters('dataCollectionEndpointName'))]",
    "dcrId": "[resourceId('Microsoft.Insights/dataCollectionRules', parameters('dataCollectionRuleName'))]",
    "streamName": "Custom-SQLServerMonitoring_CL"
  },
  "resources": [
    {
      "type": "Microsoft.Insights/dataCollectionEndpoints",
      "apiVersion": "2022-06-01",
      "name": "[parameters('dataCollectionEndpointName')]",
      "location": "[parameters('location')]",
      "properties": {
        "networkAcls": {
          "publicNetworkAccess": "Enabled"
        }
      }
    },
    {
      "type": "Microsoft.Insights/dataCollectionRules",
      "apiVersion": "2022-06-01",
      "name": "[parameters('dataCollectionRuleName')]",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[variables('dceId')]"
      ],
      "properties": {
        "dataCollectionEndpointId": "[variables('dceId')]",
        "streamDeclarations": {
          "Custom-SQLServerMonitoring_CL": {
            "columns": [
              { "name": "TimeGenerated", "type": "datetime" },
              { "name": "CollectorName", "type": "string" },
              { "name": "SqlInstance", "type": "string" },
              { "name": "ServerName", "type": "string" },
              { "name": "SqlVersion", "type": "string" },
              { "name": "InstanceStartTime", "type": "string" },
              { "name": "InstanceUptimeSeconds", "type": "int" },
              { "name": "InstanceUptimeMinutes", "type": "int" },
              { "name": "InstanceUptimeHours", "type": "int" },
              { "name": "InstanceUptimeDays", "type": "int" },
              { "name": "DatabaseName", "type": "string" },
              { "name": "DatabaseState", "type": "string" },
              { "name": "RecoveryModel", "type": "string" },
              { "name": "DatabaseCreateDate", "type": "string" },
              { "name": "LastFullBackupTime", "type": "string" },
              { "name": "HoursSinceFullBackup", "type": "int" },
              { "name": "LastFullBackupStatus", "type": "string" },
              { "name": "FullBackupAlertStatus", "type": "string" },
              { "name": "LastLogBackupTime", "type": "string" },
              { "name": "MinutesSinceLogBackup", "type": "int" }
            ]
          }
        },
        "destinations": {
          "logAnalytics": [
            {
              "workspaceResourceId": "[variables('workspaceResourceId')]",
              "name": "logAnalyticsDestination"
            }
          ]
        },
        "dataFlows": [
          {
            "streams": [
              "Custom-SQLServerMonitoring_CL"
            ],
            "destinations": [
              "logAnalyticsDestination"
            ],
            "transformKql": "source",
            "outputStream": "Custom-SQLServerMonitoring_CL"
          }
        ]
      }
    }
  ],
  "outputs": {
    "dceEndpoint": {
      "type": "string",
      "value": "[reference(variables('dceId'), '2022-06-01').logsIngestion.endpoint]"
    },
    "dcrImmutableId": {
      "type": "string",
      "value": "[reference(variables('dcrId'), '2022-06-01').immutableId]"
    },
    "dcrResourceId": {
      "type": "string",
      "value": "[variables('dcrId')]"
    },
    "streamName": {
      "type": "string",
      "value": "[variables('streamName')]"
    }
  }
}